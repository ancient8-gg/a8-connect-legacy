{
  "extends": "./tsconfig.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "typings.d.ts",
    "exports",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dts",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "target": "ES6"
  }
}